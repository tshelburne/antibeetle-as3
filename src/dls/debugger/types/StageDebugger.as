package dls.debugger.types {		import flash.display.Stage;	import flash.text.TextField;	import flash.text.TextFormat;		import dls.debugger.types.IDebugger;	import dls.debugger.utils.DebugUtil;		public class StageDebugger implements IDebugger {				private var _active:Boolean;		private var _console:TextField;		public function StageDebugger(stage:Stage, active:Boolean=false) {			_active = active;						_console = new TextField();			_console.defaultTextFormat = new TextFormat("Courier New", 12);			_console.multiline = true;			_console.selectable = true;			_console.wordWrap = false;			_console.width = stage.stageWidth;			_console.height = stage.stageHeight;						stage.addChild(_console);		}				public function out(message:*):void {			if (_active) {				_console.appendText(DebugUtil.print(message) + "\n");			}		}	}	}